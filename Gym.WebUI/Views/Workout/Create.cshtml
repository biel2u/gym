@model Gym.WebUI.Models.TrainingViewModel

<div class="create__form">
    <h2>Create workout</h2>

    @using (Html.BeginForm("Save", "Workout"))
    {
        @Html.HiddenFor(m => m.TrainingID)
        <div class="form-group">
            <label>Your workout name: </label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", rows = 5 })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="form-group">
            <label>Day: </label>
            @Html.DropDownListFor(m => m.Day, new SelectList(Enum.GetValues(typeof(DayOfWeek))), new { @class = "form-control", type = "text" })
        </div>
        <div class="form-group">
            <label>Category: </label>
            @Html.EnumDropDownListFor(m => m.Category, new { @class = "form-control", type = "text" })
        </div>

        <div>
            <input type="submit" value="Save" class="btn btn-primary"/>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
